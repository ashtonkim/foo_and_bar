<!DOCTYPE html>
<html>
<head>
  <title>SmsWeb::Admin</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag "admin" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="headline">
  <div class="headline_wrapper">
    <h1>관리자 페이지</h1>
    <ul class="account_nav">
      <% unless flickr_logged_in? %>
        <li><%= link_to "플리커 로그인", flickr_auth_path %></li>
      <% end %>
      <li><%= link_to "관리자 로그아웃", destroy_admin_session_path %></li>
    </ul>
  </div>
</div>

<div id="gnb">
  <div class="gnb_wrapper">
    <ul class="nav_left">
      <li><%= link_to "업체관리", [:admin, :companies] %></li>
      <li><%= link_to "차 관리", [:admin, :cars] %></li>
      <li><%= link_to "레이싱 모델 관리", [:admin, :racing_models] %></li>
      <li><%= link_to "사진 관리", [:admin, :photos] %></li>
      <li><%= link_to "영상 관리", [:admin, :videos] %></li>
      <li><%= link_to "배너 관리", [:admin, :banners] %></li>
      <li><%= link_to "이벤트 관리", [:admin, :events] %></li>
    </ul>
  </div>
</div>

<div id="content">
  <div class="content_wrapper">
    <%= yield %>
  </div>
</div>


</body>
</html>
