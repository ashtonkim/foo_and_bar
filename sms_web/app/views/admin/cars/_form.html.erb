
<ul class="guide">
  <li>용품업체는 필요한 항목만 입력해 주세요.</li>
</ul>

<%= form_for [:admin, @car], :html => { :multipart => true, :class => "table_form" } do |f| %>

  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this admin_car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :company_id, "제조사" %>
    <%= f.select :company_id, grouped_options_for_select(grouped_company_collection, @car.company_id), :include_blank => false %>
  </div>
  <div class="field">
    <%= f.label :name, "차명" %>
    <%= f.text_field :name %>
    <span class="hint">예) 마티즈2</span>
  </div>
  <div class="field">
    <%= f.label :price, "가격" %>
    <%= f.text_field :price %>
    <span class="hint">단위까지 적어 주세요. 예) 950만원</span>
  </div>
  <div class="field">
    <%= f.label :vehicle_type, "차종" %>
    <%= f.text_field :vehicle_type %>
    <span class="hint">예) 국산 경차, 외산 SUV</span>
  </div>
  <div class="field">
    <%= f.label :engine_type, "엔진" %>
    <%= f.text_field :engine_type %>
  </div>
  <div class="field">
    <%= f.label :ventilation, "배기량" %>
    <%= f.text_field :ventilation %>
  </div>
  <div class="field">
    <%= f.label :fuel, "연료" %>
    <%= f.text_field :fuel %>
  </div>
  <div class="field">
    <%= f.label :fuel_mileage, "연비" %>
    <%= f.text_field :fuel_mileage %>
  </div>
  <div class="field">
    <%= f.label :peak_output, "최대출력" %>
    <%= f.text_field :peak_output %>
  </div>
  <div class="field">
    <%= f.label :seat_capacity, "승차인원" %>
    <%= f.text_field :seat_capacity %>
  </div>
  <div class="field">
    <%= f.label :drive_type, "구동방식" %>
    <%= f.text_field :drive_type %>
    <span class="hint">예) 4륜구동, 후륜구동</span>
  </div>
  <div class="field">
    <%= f.label :transmission, "변속기" %>
    <%= f.text_field :transmission %>
  </div>

  <div class="field">
    <%= f.label :desc, "설명" %>
    <%= f.text_area :desc, :size => "40x8" %>
  </div>
  <div class="field">
    <%= f.label :video_stream_url, "영상 스트리밍 URL" %>
    <%= f.text_field :video_stream_url %>
    <span class="hint">예) http://www.youtube.com/embed/sxLmS9XQmE0</span>
  </div>
  <!--
  <div class="field">
    <%= f.label :represent_on, "대표 차량 설정" %>
    <%= f.check_box :represent_on, :value => 1 %>
  </div>
  -->

  <div class="field">
    <%= f.label :image_raw, "차/용품 사진" %>
    <%= f.file_field :image_raw %>
    <span class="hint"> </span>
  </div>
  <div class="image_preview">
    <% if @car.image_raw.file? %>
      <%= image_tag @car.image_raw.url(:thumb, false) %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :published, "앱에 노출?" %>
    <%= f.check_box :published %> 예
  </div>

  <div class="actions">
    <% if @car.new_record? %>
      <%= f.submit "차/용품 등록" %>
    <% else %>
      <%= f.submit "차/용품 수정" %>
    <% end %>
  </div>

<% end %>
